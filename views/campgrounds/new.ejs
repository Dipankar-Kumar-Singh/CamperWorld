<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class = "mb-3">
        <label class="form-lable" for="title"> Title </label>
        <input class="form-control" type="text" id="title" name="campground[title]" />
      </div>
      <div class = "mb-3">
        <label class="form-lable" for="image"> Image URL </label>
        <input class="form-control" type="text" id="image" name="campground[image]" />
      </div>
      <div class = "mb-3">
        <label class="form-lable" for="description"> Description </label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" > </textarea>
      </div>
 
      <div class = "mb-3">
        <label class="form-lable" for="price"> Price </label>
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" id="price">
            <span class="input-group-text">.00</span>
          </div>
      </div>

      <div class = "mb-3">
        <label class="form-lable" for="location"> Location </label>
        <input class="form-control" type="text" id="location" name="campground[location]" />
      </div>

      <button class="btn btn-success">Add Campground</button>
    </form>

    <a href="/campgrounds"> All Campground </a>
  </div>
</div>
